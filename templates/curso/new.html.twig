{% extends 'base.html.twig' %}

{% block title %}New Curso{% endblock %}

{% block body %}
    {% set usuario_nombre = app.session.get('usuario_nombre') %}
    {% set usuario_apellido = app.session.get('usuario_apellido') %}

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Crear Nuevo Curso</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link">Bienvenido, <strong>{{ usuario_nombre }}</strong> <strong>{{ usuario_apellido }}</strong></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="{{ path('app_logout') }}">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container mt-5">

        <!-- Formulario -->
        <div class="card p-4 shadow-sm">
            {{ include('curso/_form.html.twig') }}
        </div>

        <!-- Botón para volver a la lista -->
        <div class="text-center mt-4">
            <a href="{{ path('app_curso_index') }}" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>
{% endblock %}
